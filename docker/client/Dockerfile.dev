FROM node:13

MAINTAINER Victor Nwaokocha

# Create app directory
WORKDIR /client

# Install app dependencies
COPY client .

ARG PORT
ARG API_ENDPOINT
ARG BASIC_AUTH_USER
ARG BASIC_AUTH_PASS

ENV PORT $PORT
ENV API_ENDPOINT $API_ENDPOINT
ENV BASIC_AUTH_USER $BASIC_AUTH_USER
ENV BASIC_AUTH_PASS $BASIC_AUTH_PASS

RUN echo $PORT
RUN npm install

EXPOSE $PORT

CMD ["npm", "run", "start"]